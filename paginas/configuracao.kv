#:import dp kivy.metrics.dp

<Configuracao>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'res/gradient.png'
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)

        FloatLayout:
            size_hint: (1, None)
            height: dp(80)

            MDIconButton:
                icon: "arrow-left"
                size_hint: (None, None)
                size: dp(36), dp(36)
                pos_hint: {"left": 1, "top": 1}
                theme_text_color: "Custom"
                text_color: (1, 1, 1, 1)
                on_release:
                    app.gerenciador.current = 'overview'

            Label:
                text: 'Configurar meu Overview'
                font_size: dp(30)
                bold: True
                color: utils.get_color_from_hex('#FFFFFF')
                size_hint: (1, None)
                pos_hint: {"center_x": 0.5, "top": 1}
                halign: "center"
                valign: "middle"
                height: dp(80)

        MDCard:
            size_hint: (1, 1)
            elevation: 4
            radius: [dp(60), dp(60), 0, 0]
            md_bg_color: utils.get_color_from_hex('#FFFFFF')
            pos_hint: {'center_x': 0.5}
            padding: [dp(30), dp(30), dp(30), 0]

            ScrollView:
